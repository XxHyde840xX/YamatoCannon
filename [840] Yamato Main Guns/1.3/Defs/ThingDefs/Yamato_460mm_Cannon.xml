<Defs>

<ThingDef ParentName="BuildingBase" Name="BaseYamatoCannonBuilding">
    <defName>Turret_YamatoCannon</defName>
    <label>三联装94式45倍径460毫米口径舰炮一号炮塔</label>
    <description>三联装94式45倍径460毫米口径舰炮一号炮塔</description>
    <thingClass>Building_TurretGun</thingClass>
	<drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/Security/YamatoBase</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(22,22)</drawSize>
	  <drawOffset>(0,0,-0.1)</drawOffset>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
        <cornerTL>Damage/Corner</cornerTL>
      </damageData>
      <shadowData>
        <offset>(0,0,-0.05)</offset>
        <volume>(1.5,0.35,1.4)</volume>
      </shadowData>
    </graphicData>
    <designationCategory>Yamato</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <uiIconPath>Things/Icons/YamatoIcon</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>true</rotatable>
    <size>(7,7)</size>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>150000</MaxHitPoints>
      <Flammability>0</Flammability>
      <WorkToBuild>50000</WorkToBuild>
      <Mass>250</Mass>
      <Beauty>1000</Beauty>
      <ShootingAccuracyTurret>0.99</ShootingAccuracyTurret>
    </statBases>
    <tickerType>Normal</tickerType>
	<inspectorTabs>
      <li>ITab_Shells</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Explosive">
		<explosiveRadius>2</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <chanceNeverExplodeFromDamage>1</chanceNeverExplodeFromDamage>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>15000</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
	  <li Class="VFESecurity.CompProperties_LongRangeArtillery">
        <worldTileRange>1000</worldTileRange>
        <maxForcedMissRadiusFactor>50</maxForcedMissRadiusFactor>
        <gizmoIconTexPath>Things/Building/Security/YamatoTop</gizmoIconTexPath>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Ammo</fuelLabel>
        <fuelGizmoLabel>Ammo</fuelGizmoLabel>
        <fuelFilter>
          <thingDefs>
            <li>460mmCannonShell_AP</li>
          </thingDefs>
        </fuelFilter>
        <fuelCapacity>12</fuelCapacity>
		<targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
        <initialFuelPercent>0</initialFuelPercent>
        <autoRefuelPercent>1</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>0</minimumFueledThreshold>
        <atomicFueling>false</atomicFueling>
        <fuelMultiplier>1</fuelMultiplier>
        <factorByDifficulty>false</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <outOfFuelMessage>Cannot shoot: Out of ammo</outOfFuelMessage>
        <fuelIconPath>UI/Overlays/Barrel</fuelIconPath>
      </li>
    </comps>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.5</fillPercent>
    <hasTooltip>true</hasTooltip>
    <costStuffCount>5000</costStuffCount>
    <costList>
		<Steel>10000</Steel>
		<Gold>1000</Gold>
    	<Plasteel>1000</Plasteel>
		<ComponentSpacer>10</ComponentSpacer>
    </costList>
	<designationHotKey>Misc4</designationHotKey>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <specialDisplayRadius>20</specialDisplayRadius>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>YamatoCannon</turretGunDef>
      <turretBurstCooldownTime>18</turretBurstCooldownTime>
      <turretTopDrawSize>25</turretTopDrawSize>
      <turretTopOffset>(0, 0)</turretTopOffset>
      <buildingTags>
        <li>Cannon_Turret</li>
      </buildingTags>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>YamatoCannons</li>
    </researchPrerequisites>
    <uiIconScale>0.95</uiIconScale>
  </ThingDef>

  <ThingDef ParentName="BaseWeaponTurret">
    <defName>YamatoCannon</defName>
    <label>三联装94式45倍径460毫米口径舰炮一号炮塔</label>
    <description>三联装94式45倍径460毫米口径舰炮一号炮塔</description>
    <graphicData>
      <texPath>Things/Building/Security/YamatoTop</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(2,2)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <AccuracyTouch>0.99</AccuracyTouch>
      <AccuracyShort>0.99</AccuracyShort>
      <AccuracyMedium>0.99</AccuracyMedium>
      <AccuracyLong>0.99</AccuracyLong>
      <RangedWeapon_Cooldown>18</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>40</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <weaponTags Inherit="false">
      <li>TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>460mmCannonBullet_Shell_AP</defaultProjectile>
        <warmupTime>8</warmupTime>
		<forcedMissRadius>20</forcedMissRadius>
        <requireLineOfSight>false</requireLineOfSight>
        <minRange>20</minRange>
        <range>500</range>
        <ticksBetweenBurstShots>90</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>460mm_Yamato_Shoot</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>200</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
		<targetParams>
          <canTargetLocations>false</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
  </ThingDef>
  
